{
  "manifest_version": 3,
  "name": "Auto Commenter",
  "version": "1.0",
  "description": "Automatically searches Naver and Tistory blogs and writes comments.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.tistory.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [],
  "background": {}
}
